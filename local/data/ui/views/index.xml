        </search>
        <fieldForLabel>city</fieldForLabel>
        <fieldForValue>city</fieldForValue>
        <default>*</default>
        <initialValue>*</initialValue>
      </input>
      <input type="time" token="timeToken2">
        <label></label>
        <default>
          <earliest>0</earliest>
          <latest></latest>
        </default>
      </input>
