        <search>
          <query>index=s4g-shootings sourcetype="csv-shooting_tracker" state="$stateExplorerToken0$" city="$cityExplorerToken0$" | eval "Name of Shooter(s)"="Name Hidden", Date=strftime(_time, "%d/%m/%Y"), Article="Link to Article"  | stats sum(killed) AS "People Killed" sum(wounded) AS "People Wounded" by "Name of Shooter(s)", date, state_long, Date, city, Article, article1 | rename state_long AS State, city AS City | table Date, State, City "Name of Shooter(s)", "People Killed", "People Wounded", "Article" | sort -"People Killed"</query>
          <earliest>$timeToken2.earliest$</earliest>
          <latest>$timeToken2.latest$</latest>
        </search>
